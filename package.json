{
  "name": "melvor-map-maker",
  "version": "0.13.0",
  "private": true,
  "scripts": {
    "dev": "npm run patchServiceWorkers && vite dev",
    "prebuild": "npm i && npm run addRedirects && npm run patchServiceWorkers && npm run writeEnv && npm run getMelvorSchema && npm run generatePWAIcons && npm run check && npm run lint && npm run format",
    "build": "vite build",
    "postbuild": "npm run minify",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint src",
    "format": "prettier --write .",
    "deploy": "git subtree push --prefix build origin github-pages",
    "addRedirects": "node scripts/addRedirects.cjs",
    "writeEnv": "node scripts/writeEnv.cjs",
    "minify": "node scripts/minify.cjs",
    "getMelvorSchema": "node scripts/getMelvorSchema.cjs",
    "generatePWAIcons": "node scripts/generatePWAIcons.cjs",
    "patchServiceWorkers": "node scripts/patchServiceWorkers.cjs"
  },
  "devDependencies": {
    "@pixi/devtools": "^2.0.1",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.1",
    "@types/eslint": "^9.6.1",
    "@types/toastify-js": "^1.12.3",
    "@vite-pwa/assets-generator": "^0.2.6",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.45.1",
    "globals": "^15.13.0",
    "html-minifier-terser": "^7.2.0",
    "jsdom": "^25.0.1",
    "json-schema-to-typescript": "^15.0.3",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "sass": "^1.82.0",
    "svelte": "^5.7.1",
    "svelte-check": "^4.1.1",
    "terser": "^5.37.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.3"
  },
  "type": "module",
  "dependencies": {
    "client-zip": "^2.4.6",
    "dexie": "^4.0.10",
    "interactjs": "^1.10.27",
    "marked": "^15.0.3",
    "pixi-viewport": "^6.0.3",
    "pixi.js": "^8.6.3",
    "tippy.js": "^6.3.7",
    "toastify-js": "^1.12.0"
  }
}
